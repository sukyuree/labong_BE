<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.comealone.jeju.domain.repository.PlanRepository">

	<resultMap id="PlanModel" type="Plan">
		<result column="id" property="id"/>
		<result column="plan_name" property="planName"/>
		<result column="start_date" property="startDate"/>
		<result column="end_date" property="endDate"/>
		<result column="concept" property="concept"/>
		<result column="is_priavte" property="isPrivate"/>
		<result column="user" property="user"/>
		<result column="created_at" property="createdAt"/>
	</resultMap>

	<select id="findAll" resultMap="PlanModel">
		SELECT *
		FROM plan
	</select>

	<select id="findAllByConcept" resultMap="PlanModel">
		SELECT *
		FROM plan
		WHERE concept = #{concept}
	</select>

	<select id="findAllByUser" resultMap="PlanModel">
		SELECT *
		FROM plan
		WHERE user = #{user}
	</select>
</mapper>